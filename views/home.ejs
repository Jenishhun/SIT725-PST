<div class="welcome-card">
  <h1>Welcome to the Personal Budget Tracker</h1>
  <p class="flow-text">Take control of your finances with our easy-to-use budget tracking tools.</p>
  
  <% if (user) { %>
    <div class="row center">
      <div class="col s12 m6">
        <div class="card teal lighten-1 white-text">
          <div class="card-content">
            <span class="card-title">Quick Actions</span>
            <div class="row">
              <div class="col s6">
                <a href="/view-income" class="btn-large waves-effect waves-light white teal-text">
                  <i class="material-icons left">trending_up</i>Income
                </a>
              </div>
              <div class="col s6">
                <a href="/view-expense" class="btn-large waves-effect waves-light white teal-text">
                  <i class="material-icons left">trending_down</i>Expenses
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="col s12 m6">
        <div class="card teal lighten-2 white-text">
          <div class="card-content">
            <span class="card-title">Account</span>
            <p>Logged in as: <%= user.username %></p>
            <a href="/logout" class="btn waves-effect waves-light red lighten-1">
              <i class="material-icons left">exit_to_app</i>Logout
            </a>
          </div>
        </div>
      </div>
    </div>
  <% } else { %>
    <div class="row center">
      <a href="/login" class="btn-large waves-effect waves-light teal">
        <i class="material-icons left">login</i>Login
      </a>
      <a href="/register" class="btn-large waves-effect waves-light teal lighten-1">
        <i class="material-icons left">person_add</i>Register
      </a>
    </div>
  <% } %>
</div>
